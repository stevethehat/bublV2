{
	"type": "Application",
	"id": "BublApp",
	"show": true,
	"defaults": { 
		"type": "View",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical", "align": "left" } 
	},			
	"children":[
		{
			"id": "Header",
			"layout": { "style": "horizontal", "align": "right" },
			"size": { "height": 54 },
			"style": { "border-bottom": "solid 1px #aaa" },
			"children": [
				{
					"type": "Control",
					"label": "<h1>bubl</h1>"
				},		
				{
					"type": "Control",
					"image": "app/img/bubl.png",
					"size": { "width": 56 }
				}								
			]
		},
		{
			"id": "toolbar",
			"layout": { "style": "horizontal", "align": "left" },
			"size": { "height": 34, "width": "max" },
			"defaults": {
				"size": { "width": 100 }	
			},
			"children": [
				{ "type": "IconLabel", "tag": "home", "content": { "icon": "fa-home", "size": 2, "label": "Home" }, "size": { "width": 80 } },
				{ 
					"id": "toolbarButtons", 
					"size": { "width": "max" },
					"defaults": {
						"size": { "width": 100 }	
					} 
				}
			]
		}
	]
}
