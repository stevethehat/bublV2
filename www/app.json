{
	"type": "Application",
	"id": "BublApp",
	"show": true,
	"defaults": { 
		"type": "View",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical", "align": "left" } 
	},			
	"children":[
		{
			"id": "Header",
			"layout": { "style": "horizontal", "align": "right" },
			"size": { "height": 54 },
			"style": { "border-bottom": "solid 1px #aaa" },
			"children": [
				{
					"type": "Control",
					"label": "<h1>bubl</h1>"
				},		
				{
					"type": "Control",
					"image": "app/img/bubl.png",
					"size": { "width": 56 }
				}								
			]
		},
		{
			"id": "toolbar",
			"layout": { "style": "horizontal", "align": "left" },
			"size": { "height": 34, "width": "max" },
			"defaults": {
				"type": "Control",
				"size": { "width": 100 }
			},
			"children": [
				{ "type": "IconLabel", "size": { "width": "max" }, "tag": "home", "content": { "icon": "fa-home", "size": 2 } },
				{ "type": "IconLabel", "size": { "width": "max" }, "tag": "back", "content": { "icon": "fa-angle-left", "size": 2, "label": "back" } }
			]
		},

		{
			"id": "StatusBar",
			"class": "statusbar",
			"size": { "height": 30 }
		},
		{
			"type": "View",
			"id": "help",
			"position": { "bottom": 10, "right": 10 },
			"size": { "width": 40, "height": 40 },
			"children": [
				{
					"type": "Button",
					"icon": {
						"name": "fa-question-circle",
						"size": 3
					},
					"size": { "width": 40, "height": 40 },
					"actions":{
						"click": "ShowHelp"
					}
				}
			]
		}
	]
}
