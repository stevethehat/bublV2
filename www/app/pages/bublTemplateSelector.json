{
	"BublApp":
	{
		"type": "View",
		"id": "bublTemplateSelector",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical" },
		"defaults": { 
			"type": "View",
			"show": true,
			"size": { "width": "max", "height": "max" },
			"layout": { "style": "vertical", "align": "left" } 
		},
		"children": [
			{
				"layout": { "style": "horizontal" },
				"children":[
					{ "id": "leftPadding" },
					{
						"size": { "width" : 1020, "height": 600 },
						"children":[
							{
								"children": [
									{
										"type": "Control",
										"size": { "height": 40 },
										"label": "<h2>bubl template editor</h2>"
									},
									{
										"type": "CompoundElement",
										"label": "<p>Select the template you want to edit, or <span data-tag=\"add\"><i class=\"fa fa-plus fa-x1\"/> add a new template</span>.</p>",
										"size": { "height": 30 }	
									},
									{
										"id": "bubleGrid",
										"type": "PagedGrid",
										"dimensions": { "columns": 3, "rows": 2 },
										"defaults": {
											"type": "ThumbnailMenu",
											"size": { "width": 340, "height": 200 },
											"tag": "select",
											"menu":[
												{ "action": "duplicate", "icon": "fa-files-o", "label": "Duplicate" },
												{ "action": "delete", "icon": "fa-trash-o", "label": "Delete" }
											]
										},
										"children": []								
									}
								]
							}
						]
					},
					{  }
				]
			},
			{ "size": { "height" : 40 } }
		]
	}
}