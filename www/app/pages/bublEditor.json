{
	"BublApp":
	{
		"type": "View",
		"id": "editor",
		"title": "bubl editor",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical" },
		"defaults": { 
			"type": "View",
			"show": true,
			"size": { "width": "max", "height": "max" },
			"layout": { "style": "vertical", "align": "left" } 
		},
	
		"children": [
			{
				"id": "mainPanel",
				"layout": { "style": "horizontal" },
				"children": [
					{
						"id": "palette",
						"size": { "width": 200 },
						"children":[
							{
								"type": "View",
								"style": { "align": "vertical" },
								"bgColour": "#f00",
								"size": { "width": 200 },
								"children": [
									{
										"type": "View",
										"defaults": {
											"type": "IconLabel",
											"size": { "height": 38 },
											"tag": "addcontrol"
										},
										"children": [
											{	
												"content": {
													"label": "Text",
													"icon": "fa-file-text-o",
													"addtype": "ContentEditable" 
												}
											},
											{
												"content": {
													"label": "Image",
													"icon": "fa-file-image-o",
													"addtype": "BublImage" 
												}										
											},
											{
												"content": {
													"label": "Video",
													"icon": "fa-file-movie-o",
													"addtype": "BublVideo" 											
												}
											},
											{
												"content": {
													"label": "Columns",
													"icon": "fa-columns",
													"addtype": "BublColumns" 											
												}
											}
										]
									}
								]
							},
							{
								"type": "View",
								"style": { "align": "vertical" },
								"bgColour": "#f00",
								"size": { "width": 200, "height": 120 },
								"children": [
									{
										"type": "Uploader",
										"size": { "height": 120 }
									}
								]
							},
							{
								"type": "List",
								"id": "AssetList",
								"size": { "height": "max" },
								"bgColour": "red",
								"controls": [
									{
										"type": "Button",
										"label": "but1",
										"bgColour": "#a00",

										"size": {
											"height": 50, "width": 200
										},

										"margin": {
											"bottom": 10, "width": 200
										}
									}
								]
							},
							{
								"type": "Control",
								"size": { "width": 200, "height": 40 },
								"label": "down the bottom"
							}									
						]
					},
					{
						"children":[
							{
								"type": "Control",
								"label": "<h2>Editing '$(page.title)'</h2>",
								"size": { "height": 40 }	
							},
							{
								"id": "bublEditor",
								"color": "#999"
							}
						]
					},
					{
						"id": "properties",
						"size": { "width": 300 },
						"children": [
							{
								"type": "View",
								"layout": { "align": "left", "style": "horizontal" },
								"size": { "height": 30 },
								"children":[
									{
										"tag": "parentcontrol",
										"type": "IconLabel",
										"size": { "width": 50 },
										"content": {
											"label": "Up",
											"icon": "fa-chevron-up"
										}
									},									
									{
										"tag": "savecontrol",
										"type": "IconLabel",
										"content": {
											"label": "Done",
											"icon": "fa-check"
										}
									}									
								]	
							},
							{
								"type": "View",
								"id": "PropertiesForm"
							}
						]
					}
				]
			}
		]
	},
	"toolbarButtons":{
		"type": "View",
		"size": { "width": 200 },
		"layout": { "align": "left", "style": "horizontal" },
		"children":[
			{
				"type": "IconLabel",
				"tag": "source",
				"content": {
					"label": "Source",
					"icon": "fa-ellipsis-h"
				},
				"size": { "width" : 80 }
			},
			{
				"type": "IconLabel",
				"tag": "save",
				"content": {
					"label": "Save",
					"icon": "fa-floppy-o"
				},
				"size": { "width" : 60 }
			},
			{
				"type": "IconLabel",
				"tag": "cancel",
				"content": {
					"label": "Cancel",
					"icon": "fa-thumbs-o-down"
				},
				"size": { "width" : 100 }
			}
		]		
	}
}