{
	"BublApp":
	{
		"type": "View",
		"id": "editor",
		"title": "bubl editor",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical" },
		"defaults": { 
			"type": "View",
			"show": true,
			"size": { "width": "max", "height": "max" },
			"layout": { "style": "vertical", "align": "left" } 
		},
	
		"children": [
			{
				"id": "mainPanel",
				"layout": { "style": "horizontal" },
				"children": [
					{
						"id": "palette",
						"size": { "width": 80 },
						"children":[
							{
								"type": "View",
								"style": { "align": "vertical" },
								"bgColour": "#f00",
								"size": { "width": 200 },
								"children": [
									{
										"type": "View",
										"defaults": {
											"type": "IconLabel",
											"size": { "height": 38 },
											"tag": "selectcontroltoadd"
										},
										"children": [
											{	
												"content": {
													"label": "Compound",
													"icon": "fa-file-text-o"
												},
												"addcontent": {
													"type": "msMenuBox",
                                                    "text": "Compound Element"
												} 
											},
											{	
												"content": {
													"label": "Text",
													"icon": "fa-file-text-o"
												},
												"addcontent": {
													"type": "ContentEditable",
                                                    "text": "Content Editable"
												} 
											},
											{
												"content": {
													"label": "Image",
													"icon": "fa-file-image-o"
												},
												"addcontent":{
													"type": "BublImage"  														
												} 
										
											},
											{
												"content": {
													"label": "Video",
													"icon": "fa-file-movie-o"
												},
												"addcontent": {
													"type": "BublVideo"													
												} 																							
											},
											{
												"content": {
													"label": "Columns",
													"icon": "fa-columns"
												},
												"addcontent": {
													"type": "BublColumns"													
												} 																							
											},
											{
												"content": {
													"label": "Rows",
													"icon": "fa-columns fa-rotate-90"
												},
												"addcontent":{
													"type": "BublRows" 																								
												}												
											}
										]
									}
								]
							}								
						]
					},
					{
						"children":[
							{
								"type": "View",
								"id": "bublEditor",
								"color": "#999"
							}
						]
					}
				]
			}
		]
	},
	"toolbarButtons":{
		"type": "View",
		"size": { "width": 200 },
		"layout": { "align": "left", "style": "horizontal" },
		"children":[
			{
				"type": "IconLabel",
				"tag": "preview",
				"content": {
					"label": "Preview",
					"icon": "fa-camera"
				},
				"size": { "width" : 90 }
			},
			{
				"type": "IconLabel",
				"tag": "source",
				"content": {
					"label": "Source",
					"icon": "fa-ellipsis-h"
				},
				"size": { "width" : 80 }
			},
			{
				"type": "IconLabel",
				"tag": "converttotemplate",
				"content": {
					"label": "Convert to Template",
					"icon": "fa-plus-square-o"
				},
				"size": { "width" : 170 }
			},
			{
				"type": "IconLabel",
				"tag": "save",
				"content": {
					"label": "Save",
					"icon": "fa-floppy-o"
				},
				"size": { "width" : 60 }
			},
			{
				"type": "IconLabel",
				"tag": "cancel",
				"content": {
					"label": "Cancel",
					"icon": "fa-thumbs-o-down"
				},
				"size": { "width" : 100 }
			}
		]		
	}
}