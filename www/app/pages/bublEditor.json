{
	"BublApp":
	{
		"type": "View",
		"id": "editor",
		"title": "bubl editor",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical" },
		"defaults": { 
			"type": "View",
			"show": true,
			"size": { "width": "max", "height": "max" },
			"layout": { "style": "vertical", "align": "left" } 
		},
	
		"children": [
			{
				"id": "mainPanel",
				"layout": { "style": "horizontal" },
				"children": [
					{
						"id": "palette",
						"size": { "width": 200 },
						"children":[
							{
								"type": "View",
								"style": { "align": "vertical" },
								"bgColour": "#f00",
								"size": { "width": 200 },
								"children": [
									{
										"type": "View",
										"defaults": {
											"type": "IconLabel",
											"size": { "height": 38 },
											"tag": "addcontrol"
										},
										"children": [
											{	
												"content": {
													"label": "Text",
													"icon": "fa-file-text-o"
												},
												"addcontent": {
													"type": "ContentEditable"
												} 
											},
											{
												"content": {
													"label": "Image",
													"icon": "fa-file-image-o"
												},
												"addcontent":{
													"type": "BublImage"  														
												} 
										
											},
											{
												"content": {
													"label": "Video",
													"icon": "fa-file-movie-o"
												},
												"addcontent": {
													"type": "BublVideo"													
												} 																							
											},
											{
												"content": {
													"label": "Columns",
													"icon": "fa-columns"
												},
												"addcontent": {
													"type": "BublColumns"													
												} 																							
											},
											{
												"content": {
													"label": "Rows",
													"icon": "fa-columns fa-rotate-90"
												},
												"addcontent":{
													"type": "BublRows" 																								
												}												
											},
											{
												"content": {
													"label": "Slides",
													"icon": "fa-clone"
												},
												"addcontent":{
													"type": "BublSlides",
													"size": { "width": "max", "height": "max" },
													"children": [
														{
															"type": "ContentArea",
															"position": { "top": 0, "left": 0, "bottom": 0, "right": 0 },
															"styling":{
																"background-color": "#ff0000"
															}
														},
														{
															"type": "ContentArea",
															"position": { "top": 0, "left": 0, "bottom": 0, "right": 0 },
															"styling":{
																"background-color": "#00ff00"
															}
														}
													]											
												}												
											}
										]
									}
								]
							},
							{
								"type": "View",
								"style": { "align": "vertical" },
								"bgColour": "#f00",
								"size": { "width": 200, "height": 120 },
								"children": [
									{
										"type": "Uploader",
										"size": { "height": 120 }
									}
								]
							},
							{
								"type": "List",
								"id": "AssetList",
								"size": { "height": "max", "width": 200 },
								"controls": []
							}								
						]
					},
					{
						"children":[
							{
								"type": "Control",
								"label": "<h2>Editing '$(page.title)'</h2>",
								"size": { "height": 40 }	
							},
							{
								"id": "bublEditor",
								"color": "#999"
							}
						]
					},
					{
						"id": "properties",
						"size": { "width": 260 },
						"children": [
							{
								"type": "View",
								"layout": { "align": "left", "style": "horizontal" },
								"size": { "height": 30 },
								"children":[
									{
										"tag": "parentcontrol",
										"type": "IconLabel",
										"size": { "width": 50 },
										"content": {
											"label": "Up",
											"icon": "fa-chevron-up"
										}
									},									
									{
										"tag": "deletecontrol",
										"type": "IconLabel",
										"size": { "width": 70 },
										"content": {
											"label": "Delete",
											"icon": "fa-trash-o"
										}
									},									
									{
										"tag": "savecontrol",
										"type": "IconLabel",
										"content": {
											"label": "Done",
											"icon": "fa-check"
										}
									}									
								]	
							},
							{
								"type": "View",
								"id": "PropertiesForm",
								"scroll": true
							}
						]
					}
				]
			}
		]
	},
	"toolbarButtons":{
		"type": "View",
		"size": { "width": 200 },
		"layout": { "align": "left", "style": "horizontal" },
		"children":[
			{
				"type": "IconLabel",
				"tag": "preview",
				"content": {
					"label": "Preview",
					"icon": "fa-camera"
				},
				"size": { "width" : 90 }
			},
			{
				"type": "IconLabel",
				"tag": "source",
				"content": {
					"label": "Source",
					"icon": "fa-ellipsis-h"
				},
				"size": { "width" : 80 }
			},
			{
				"type": "IconLabel",
				"tag": "save",
				"content": {
					"label": "Save",
					"icon": "fa-floppy-o"
				},
				"size": { "width" : 60 }
			},
			{
				"type": "IconLabel",
				"tag": "cancel",
				"content": {
					"label": "Cancel",
					"icon": "fa-thumbs-o-down"
				},
				"size": { "width" : 100 }
			}
		]		
	}
}