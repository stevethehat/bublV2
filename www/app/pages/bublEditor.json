{
	"BublApp":
	{
		"type": "View",
		"id": "editor",
		"title": "bubl editor",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical" },
		"defaults": { 
			"type": "View",
			"show": true,
			"size": { "width": "max", "height": "max" },
			"layout": { "style": "vertical", "align": "left" } 
		},
	
		"children": [
			{
				"id": "mainPanel",
				"layout": { "style": "horizontal" },
				"children": [
					{
						"id": "palette",
						"size": { "width": 200 },
						"children":[
							{
								"type": "View",
								"defaults": {
									"type": "IconLabel",
									"size": { "height": 38 },
									"tag": "addcontrol"
								},
								"children": [
									{	
										"content": {
											"label": "Text",
											"icon": "fa-file-text-o",
											"addtype": "ContentEditable" 
										}
									},
									{
										"content": {
											"label": "Image",
											"icon": "fa-file-image-o",
											"addtype": "BublImage" 
										}										
									},
									{
										"content": {
											"label": "Video",
											"icon": "fa-file-movie-o",
											"addtype": "BublVideo" 											
										}
									},
									{
										"content": {
											"label": "Columns",
											"icon": "fa-columns",
											"addtype": "BublColumns" 											
										}
									},
									{
										"type": "Uploader"
									}
									
								]
							}
						]
					},
					{
						"children":[
							{
								"type": "Control",
								"label": "<h2>Editing '$(page.title)'</h2>",
								"size": { "height": 40 }	
							},
							{
								"id": "bublEditor",
								"color": "#999"
							}
						]
					},
					{
						"id": "properties",
						"size": { "width": 300 },
						"children": [
							{
								"type": "CodeEditor",
								"id": "BublElementEditor",
								"color": "#999",
								"size": { "height": 200 }
							},
							{
								"type": "View",
								"layout": { "align": "left", "style": "horizontal" },
								"size": { "height": 30 },
								"children":[
									{
										"tag": "parentcontrol",
										"type": "IconLabel",
										"size": { "width": 50 },
										"content": {
											"label": "Up",
											"icon": "fa-chevron-up"
										}
									},									
									{
										"tag": "savecontrol",
										"type": "IconLabel",
										"content": {
											"label": "Done",
											"icon": "fa-floppy-o"
										}
									}									
								]	
							},
							{
								"type": "View",
								"id": "PropertiesForm"
							}
						]
					}
				]
			}
		]
	},
	"toolbarButtons":{
		"type": "View",
		"size": { "width": 200 },
		"layout": { "align": "left", "style": "horizontal" },
		"children":[
			{
				"type": "IconLabel",
				"tag": "save",
				"content": {
					"label": "Save",
					"icon": "fa-floppy-o"
				},
				"size": { "width" : 60 }
			},
			{
				"type": "IconLabel",
				"tag": "cancel",
				"content": {
					"label": "Cancel",
					"icon": "fa-thumbs-o-down"
				},
				"size": { "width" : 100 }
			}
		]		
	}
}