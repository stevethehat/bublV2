{
	"type": "View",
	"id": "templateselector",
	"show": true,
	"size": { "width": "max", "height": "max" },
	"layout": { "style": "vertical" },
	"defaults": { 
		"type": "View",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical", "align": "left" } 
	},
	"children": [
		{ "id": "topPadding", "size": { "height" : 40 } },
		{
			"id": "mainRow",
			"layout": { "style": "horizontal" },
			"children":[
				{ "id": "leftPadding" },
				{
					"id": "mainContentArea",
					"size": { "width" : 1020, "height": 600 },
					"children":[
						{
							"children": [
								{
									"type": "Header",
									"id": "header",
									"size": { "height": 60 },
									"content": "$(bubltitle)"
								},
								{
									"type": "Text",
									"id": "instructions",
									"content": "Select the template you want to use.",
									"size": { "height": 30 }	
								},
								{
									"type": "Grid",
									"id": "bubleGrid",
									"dimensions": { "columns": 3, "rows": 2 },
									"defaults": {
										"type": "ThubmnailMenuItem",
										"size": { "width": 340, "height": 200 },
										"actions": {
											"click": "GridClick"										
										}
									},
									"children": []								
								}
							]
						}
					]
				},
				{ "id": "rightPadding" }
			]
		},
		{ "id": "bottomPadding", "size": { "height" : 40 } }
	]
}
