{
	"type": "View",
	"id": "editor",
	"show": true,
	"size": { "width": "max", "height": "max" },
	"layout": { "style": "vertical" },
	"defaults": { 
		"type": "View",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical", "align": "left" } 
	},

	"children": [
		{
			"id": "toolbar",
			"layout": { "style": "horizontal", "align": "right" },
			"size": { "height": 34 },
			"style": { "background-color": "$(bublBackgroundColor)", "color": "$(bublColor)", "padding-top": 2 },
			"defaults": {
				"type": "Control",
				"size": { "width": 100 },
				"actions": {
					"click": "ToolbarClick"
				}
			},
			"children": [
				{ "type": "Control", "size": { "width": "max" }, "id": "back", "content": { "icon": "fa-angle-left", "label": "Back", "size": 2 } },
				{ "type": "Control", "id": "pages", "content": { "icon": "fa-file-o", "label": "Pages", "size": 2 } }
			]
		},
		{
			"id": "mainPanel",
			"layout": { "style": "horizontal" },
			"children": [
				{
					"id": "palette",
					"size": { "width": 200 },
					"children":[
						{
							"type": "View",
							"defaults": {
								"type": "Control",
								"size": { "height": 38 }
							},
							"children": [
								{
									"label": "Text",
									"icon": "fa-file-text-o"
								},
								{
									"label": "Image",
									"icon": "fa-file-image-o"										},
								{
									"label": "Video",
									"icon": "fa-file-movie-o"
								},
								{
									"label": "Columns",
									"icon": "fa-columns"
								}
							]
						}
					]
				},
				{
					"id": "bublEditor",
					"color": "#999"
				},
				{
					"id": "properties",
					"size": { "width": 200 },
					"children": [
						{
							"content": "Text",
							"icon": "fa-file-text-o"
						}
					]
				}
			]
		}
	]
}
