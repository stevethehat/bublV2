{
	"BublApp":
	{
		"type": "View",
		"id": "bublPages",
		"title": "'$(bubl.title)' pages",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical" },
		"defaults": { 
			"type": "View",
			"show": true,
			"size": { "width": "max", "height": "max" },
			"layout": { "style": "vertical", "align": "left" } 
		},
		"children": [
			{
				"id": "mainRow",
				"layout": { "style": "horizontal" },
				"children":[
					{
						"id": "leftPadding"
					},
					{
						"id": "mainContentArea",
						"size": { "width" : 1020, "height": 600 },
						"children":[
							{
								"children": [
									{
										"type": "Control",
										"id": "header",
										"size": { "height": 40 },
										"label": "<h2>'$(bubl.title)' pages</h2>"
									},
									{
										"type": "Control",
										"id": "instructions",
										"label": "Select the page you want to edit.",
										"size": { "height": 30 }	
									},
									{
										"type": "Grid",
										"id": "bublGrid",
										"dimensions": { "columns": 3, "rows": 2 },
										"defaults": {
											"type": "ThumbnailMenu",
											"size": { "width": 340, "height": 200 },
											"menu":[
												{ "action": "duplicate", "icon": "fa-files-o", "label": "Duplicate" },
												{ "action": "delete", "icon": "fa-trash-o", "label": "Delete" },
												{ "action": "more", "icon": "fa-ellipsis-h", "label": "" }
											]
										},
										"children": [
											{ 
												"type": "Button", 
												"id": "addPage", 
												"tag": "add",
												"label": "Add page"
											}		
										]
									}
								]
							}
						]
					},
					{
						"id": "rightPadding"					
					}
				]
			},
			{
				"id": "bottomPadding",
				"size": { "height" : 40 }
			}
		]
	}
}